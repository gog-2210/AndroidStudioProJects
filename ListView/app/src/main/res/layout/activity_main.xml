<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huỳnh Xuân Guyn"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_marginTop="-10dp"
                android:id="@+id/materialToolbar"
                android:layout_width="380dp"
                android:layout_height="20dp"
                android:background="@drawable/gaussian_blur"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="Nhập tên mục"
                android:gravity="center"
                android:background="@drawable/r_border"
                android:inputType="textPersonName"
                android:textColorHint="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="290dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonThem"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:text="Thêm"
                android:textSize="16dp" />
            <Button
                android:id="@+id/buttonSua"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:text="Sửa"
                android:textSize="16dp"
                android:layout_marginHorizontal="10dp"/>
            <Button
                android:id="@+id/buttonXoa"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:text="Xoá"
                android:textSize="16dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_marginTop="20dp"
            android:id="@+id/listviewA"
            android:layout_width="match_parent"
            android:layout_height="305dp"/>
    </LinearLayout>
</LinearLayout>